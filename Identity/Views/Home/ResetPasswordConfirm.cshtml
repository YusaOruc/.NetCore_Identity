@model Identity.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reset Password Confirm</h1>
<hr />
@if (ViewBag.status == "success")
{
    <div class="alert alert-info">
        Şifreniz yenilenmiştir.<br />
        Yeni şifrenizle giriş yapabilirsiniz.<br />
        <a class="btn btn-link" asp-action="LogIn">Login</a>
    </div>
}
else 
{
<div class="row">
    <div class="col-md-4">
        <div class="alert alert-info">
            Yeni şifre belirleme formu.<br />

        </div>
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="New Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}





